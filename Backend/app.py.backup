from flask import Flask, request, jsonify
from flask_cors import CORS
from models import db, Project
import os
import time

app = Flask(__name__)
CORS(app)

# Koneksi ke Database PostgreSQL (URL diambil dari Environment Variable Docker)
# Format: postgresql://user:password@host:port/dbname
app.config['SQLALCHEMY_DATABASE_URI'] = os.environ.get('DATABASE_URL')
app.config['SQLALCHEMY_TRACK_MODIFICATIONS'] = False

db.init_app(app)

# Buat tabel otomatis saat pertama kali jalan dengan retry logic
def init_db():
    max_retries = 5
    retry_count = 0
    while retry_count < max_retries:
        try:
            with app.app_context():
                db.create_all()
            print("Database initialized successfully!")
            break
        except Exception as e:
            retry_count += 1
            print(f"Database connection attempt {retry_count}/{max_retries} failed: {e}")
            if retry_count < max_retries:
                time.sleep(2)
            else:
                print("Failed to connect to database after maximum retries")

init_db()

# --- ROUTES ---

# 1. READ (Public): Ambil semua portfolio
@app.route('/api/projects', methods=['GET'])
def get_projects():
    projects = Project.query.all()
    return jsonify([p.to_json() for p in projects])

# 2. CREATE (Admin): Tambah project baru
@app.route('/api/projects', methods=['POST'])
def add_project():
    data = request.json
    new_project = Project(
        title=data['title'],
        description=data['description'],
        image_url=data['image']
    )
    db.session.add(new_project)
    db.session.commit()
    return jsonify({"message": "Project berhasil ditambahkan!"}), 201

# 3. DELETE (Admin): Hapus project
@app.route('/api/projects/<int:id>', methods=['DELETE'])
def delete_project(id):
    project = Project.query.get(id)
    if project:
        db.session.delete(project)
        db.session.commit()
        return jsonify({"message": "Project dihapus"})
    return jsonify({"error": "Project tidak ditemukan"}), 404

# 4. STATS: Endpoint untuk statistik (jika diperlukan)
@app.route('/api/stats', methods=['GET'])
def get_stats():
    total_projects = Project.query.count()
    return jsonify({
        "total_projects": total_projects,
        "status": "ok"
    })

if __name__ == "__main__":
    app.run(host='0.0.0.0', port=5000)